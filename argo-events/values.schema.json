{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "argo.helm.charts/argo-events",
  "title": "argo-events",
  "type": "object",
  "properties": {
    "eventsources": {
      "title": "Argo Events Values",
      "description": "Values to configure Argo Events",
      "type": "object",
      "properties": {
        "aws-sqs": {
          "description": "SQS event source configuration.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "queue": {
                "description": "AWS SQS queue to listen to for messages",
                "type": "string"
              },
              "region": {
                "description": "AWS region",
                "type": "string"
              },
              "waitTimeSeconds": {
                "description": "The duration (in seconds) for which the call waits for a message to arrive in the queue before returning.",
                "type": "integer"
              }
            },
            "additionalProperties": false
          }
        },
        "webhook": {
          "title": "Event Sources Configuration",
          "description": "Configure various event sources for Argo Events",
          "$ref": "https://raw.githubusercontent.com/argoproj/argo-events/master/api/jsonschema/schema.json#/io.argoproj.events.v1alpha1.EventSource",
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
