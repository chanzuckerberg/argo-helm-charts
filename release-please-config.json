{
  "release-type": "helm",
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "bump-minor-pre-major": true,
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug Fixes",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Misc",
      "hidden": false
    }
  ],
  "packages": {
    "stack": {
      "package-name": "stack"
    }
  }
}
