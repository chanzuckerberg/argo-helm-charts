{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "argo.helm.charts/argo-project",
  "title": "argo-project",
  "type": "object",
  "properties": {
    "namespace": {
      "type": "string"
    },
    "projectName": {
      "type": "string"
    },
    "spec": {
      "type": "object",
      "properties": {
        "clusterResourceWhitelist": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "group": {
                "type": "string"
              },
              "kind": {
                "type": "string"
              }
            }
          }
        },
        "destinations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "namespace": {
                "type": "string"
              },
              "server": {
                "type": "string"
              }
            }
          }
        },
        "sourceRepos": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
